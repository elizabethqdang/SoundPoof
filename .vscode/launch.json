{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Attach to pwa-Chrome (-P 9222)",
			"port": 9222,
			"request": "attach",
			"type": "pwa-chrome",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "Launch pwa-Chrome (localhost:3000)",
			"request": "launch",
			"type": "pwa-chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "Attach to Chrome (-P 9222)",
			"port": 9222,
			"request": "attach",
			"type": "chrome",
			"webRoot": "${workspaceFolder}"
		},
		{
			"name": "Launch Chrome against localhost",
			"request": "launch",
			"type": "chrome",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}"
		},
		
		{
			"name": "Launch Local Node File",
			"request": "launch",
			"type": "node",
			"console": "integratedTerminal",
			"program": "${file}"
    },
    {
			"name": "Launch index.html",
      "request": "launch",
      "type": "chrome",
      "file": "${workspaceFolder}/index.html"
		},
		
		{
			"name": "Launch Devtools against localhost:3000",
			"type": "devtools-for-chrome",
			"request": "launch",
			"url": "http://localhost:3000"
		},
		{
			"name": "Launch Chrome DevTools",
			"type": "devtools-for-chrome",
			"request": "launch",
			"file": "${workspaceFolder}"
		},
		{
			"name": "Attach Chrome DevTools",
			"type": "devtools-for-chrome",
			"request": "attach",
			"url": "http://localhost:3000"
		}
	]
}